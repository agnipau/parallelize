{
    "compilerOptions": {
        "outDir": "lib",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "declaration": true,
        "downlevelIteration": true,
        "strict": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ],
    "typedocOptions": {
        "inputFiles": [
            "./src"
        ],
        "out": "docs"
    }
}
